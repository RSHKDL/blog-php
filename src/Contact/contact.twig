{% extends 'layout.twig' %}

{% block body %}

    <h2>Me contacter</h2>

    {% if flash('success') %}
        <div class="alert alert-success">
            {{ flash('success') }}
        </div>
    {% endif %}

    {% if flash('error') %}
        <div class="alert alert-danger">
            {{ flash('error') }}
        </div>
    {% endif %}

    <form action="{{ path('contact') }}" method="post">
        {{ csrf_input() }}
        {{ field('name', null, 'Votre nom') }}
        {{ field('email', null, 'Votre courriel') }}
        {{ field('content', null, 'Votre message', {type: 'textarea'}) }}
        <button class="btn btn-primary">Envoyer</button>
    </form>

{% endblock %}