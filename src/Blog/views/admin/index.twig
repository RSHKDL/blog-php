{% extends '@admin/layout.twig' %}

{% block title "Administration des articles" %}

{% block body %}

    <p class="text-right">
        <a class="btn btn-primary" href="{{ path('blog.admin.create') }}">Ajouter un article</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <td>Titre</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.title }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('blog.admin.edit', {id: item.id}) }}">Éditer</a>
                    <form action="{{ path('blog.admin.delete', {id: item.id}) }}" method="post" onsubmit="return confirm('Êtes vous sûr ?')">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ paginate(items, 'blog.admin.index') }}

{% endblock %}