{% extends 'layout.twig' %}

{% block title post.title %}

{% block body %}

    <h1>{{ post.title }}</h1>
    <p class="text-muted">
        {% if post.category_id %}
            <a href="{{ path('blog.category', {slug: post.category_slug}) }}" title="{{ post.category_name }}">{{ post.category_name }}</a>
        {% endif %}
        {{ post.created_at.format('d/m/Y \Ã  H:i') }}
    </p>
    <p><b>{{ post.header|nl2br }}</b></p>
    {{ post.content | nl2br }}

{% endblock %}