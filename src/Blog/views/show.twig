{% extends 'layout.twig' %}

{% block title post.title %}

{% block body %}
<article>
    <h1>{{ post.title }}</h1>
    {% if post.image %}
    <div class="row">
        <img src="{{ post.imageUrl }}" alt="{{ post.title }}" style="width: 100%">
    </div>
    {% endif %}    
    <p class="text-muted">
        {% if post.categoryId %}
            <a href="{{ path('blog.category', {slug: post.categorySlug}) }}" title="{{ post.categoryName }}">{{ post.categoryName }}</a>
        {% endif %}
        {{ post.createdAt.format('d/m/Y \Ã  H:i') }} par {{ post.authorName }}
    </p>
    <section><b>{{ post.header|nl2br }}</b></section>
    {{ post.content | nl2br }}
</article>
{% endblock %}