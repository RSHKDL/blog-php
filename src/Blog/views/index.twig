{% extends 'layout.twig' %}

{% block title "Mes articles" %}

{% block body %}
    <h2>Mes articles</h2>

    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}">{{ post.title }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}