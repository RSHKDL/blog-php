<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>{% block title "Mon site" %}</title>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="{{ path('blog.index') }}">Julien Helfer</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item {{ is_subpath('blog.index') ? 'active' }}">
                        <a class="nav-link" href="{{ path('blog.index') }}">Blog</a>
                    </li>
                    <li class="nav-item {{ is_subpath('resume') ? 'active' }}">
                    <a class="nav-link" href="{{ path('resume') }}">Mon CV</a>
                    </li>
                    <li class="nav-item {{ is_subpath('contact') ? 'active' }}">
                        <a class="nav-link" href="{{ path('contact') }}">Me contacter</a>
                    </li>
                </ul>
                <div class="navbar-nav mr-auto">
                    {% if current_user() %}
                        <div class="navbar-test">Connecté en tant que {{ current_user().username }}</div>
                        <form class="nav-item active" method="post" action="{{ path('auth.logout') }}">
                            {{ csrf_input() }}
                            <button class="nav-link">Se déconnecter</button>
                        </form>
                    {% else %}
                        <div class="nav-item active">
                            <a class="nav-link" href="{{ path('auth.login') }}">Se connecter</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </nav>
        <div class="container">

            {% if flash('success') %}
                <div class="alert alert-success">
                    {{ flash('success') }}
                </div>
            {% endif %}

            {% if flash('error') %}
                <div class="alert alert-danger">
                    {{ flash('error') }}
                </div>
            {% endif %}

            {% block body %}{% endblock %}

        </div>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/3.0.2/timeago.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/3.0.2/timeago.locales.min.js"></script>
        <script>
            timeago().render(document.querySelectorAll('.timeago'), 'fr')
        </script>
    </body>
</html>